= form_for @graph do |f|
  - if @graph.errors.any?
    #error_explanation
      %h2= "#{pluralize(@graph.errors.count, "error")} prohibited this graph from being saved:"
      %ul
        - @graph.errors.full_messages.each do |msg|
          %li= msg

  .short_items
    .field
      = f.label :name
      %br
      = f.text_field :name
    .field
      = f.label :short_name
      %br
      = f.text_field :short_name
    .field
      = f.label :read_password
      %br
      = f.text_field :read_password
    .field
      = f.label :write_password
      %br
      = f.text_field :write_password
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit 'Save'
